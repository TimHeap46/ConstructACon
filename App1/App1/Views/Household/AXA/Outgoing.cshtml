@using App1.Controllers
@model App1.Models.HouseholdViewModel
<?xml version="1.0" encoding="utf-8" ?>
<homequoterequestv1 xmlns="http://tempuri.org/HomeQuoteRequestV1.xsd">
    <policy>
        <actualstartdate>@Model.CommencementDate.ToShortDateString()</actualstartdate>
        <portalquoteref>@Model.QuoteReference</portalquoteref>
        <coverlevel>@Html.Partial("~/Views/Household/AXA/CoverLevel.cshtml", Model)</coverlevel>
        <buildingscoverlevel>@Model.ContentsCoverAmount</buildingscoverlevel>
        <contentscoverlevel>@Model.BuildingsCoverAmount</contentscoverlevel>
        <covertype>@Model.CoverType.ID</covertype>
        <contentsaccidentaldamagecoverrequired>@Model.ContentsAccidentalDamageCoverRequired.ToString().ToLower()</contentsaccidentaldamagecoverrequired>
        <buildingsaccidentaldamagecoverrequired>@Model.BuildingsAccidentalDamageCoverRequired.ToString().ToLower()</buildingsaccidentaldamagecoverrequired>
        <contentsvoluntaryexcess>@Model.ContentsVoluntaryExcess</contentsvoluntaryexcess>
        <buildingsvoluntaryexcess>@Model.BuildingsVoluntaryExcess</buildingsvoluntaryexcess>
        <yearsbuildingsheld>@Model.YearsBuildingHeld</yearsbuildingsheld>
        <yearscontentsheld>@Model.YearsContentsHeld</yearscontentsheld>
    </policy>
    <propertyinfo>
        <address>
            <housenumber>5</housenumber>
            <street>5 Linchfield Close</street>
            <street2>Deeping St. James</street2>
            <street3>Peterborough</street3>
            <street4>Cambridgeshire</street4>
            <street5></street5>
            <postcode>PE6 8ER</postcode>
        </address>
        <numberofbedrooms>@Model.PropertyDetails.NumberOfBedrooms</numberofbedrooms>
        <datepropertybuilt>@Html.Partial("~/Views/Household/AXA/DatePropertyBuilt.cshtml", Model)</datepropertybuilt>
        <individualyearbuilt>@Model.PropertyDetails.YearBuilt</individualyearbuilt>
        @Html.Partial("~/Views/Household/AXA/ListedBuilding.cshtml", Model)
        <propertytype>@Model.PropertyDetails.PropertyType</propertytype>
        <whenoccupied>@Model.PropertyDetails.OccupancyStatus.Description</whenoccupied>
        <previouslyflooded>@Model.HouseholdClaims.Any(claim => claim.ThisAddress == true && claim.IncidentCause.ID == 13).ToString().ToLower()</previouslyflooded>
        <experiencedsubsidence>@(Model.ExperiencedSubsidence ? "" : "false")</experiencedsubsidence>
        <walltype>@Model.PropertyDetails.WallType.Description</walltype>
        <rooftype>@Model.PropertyDetails.RoofType.Description</rooftype>
        <numberofchildren>0</numberofchildren>
        <mainentrancelocks>2</mainentrancelocks>
        <otherentrancelocks>5</otherentrancelocks>
        <patiolocks>5</patiolocks>
        <windowlocks>6</windowlocks>
        <ownership>1</ownership>
        <alarmtype>0</alarmtype>
    </propertyinfo>
    <mainpolicyholder>
        <titleid>1</titleid>
        <sex>0</sex>
        <firstname>@Model.PolicyHolder.FirstName</firstname>
        <lastname>@Model.PolicyHolder.LastName</lastname>
        <birthdate>@Model.PolicyHolder.DateOfBirth</birthdate>
        <maritalstatus>@Model.PolicyHolder.MaritalStatus.ID</maritalstatus>
        <emailaddress>@Model.PolicyHolder.EmailAddress</emailaddress>
        <mobilephonenumber>@Model.PolicyHolder.MobilePhone</mobilephonenumber>
    </mainpolicyholder>
    <filterouts xmlns="ctm/questionset/mapping/xls" />
</homequoterequestv1>
